    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "agent",
                "-m",  "hello"
            ],
            "env": {
                //"API_KEY": "your-api-key",
                //"DEBUG": "true",
                //"PYTHONPATH": "${workspaceFolder}/src"
            },
            "cwd": "${workspaceFolder}",
            "justMyCode": false,  // debug library
            "stopOnEntry": false
        }
    ]
}